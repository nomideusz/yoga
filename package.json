{
	"name": "yoga",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:push": "drizzle-kit push",
		"db:seed": "tsx scripts/seed-db.ts",
		"db:reset": "tsx scripts/seed-db.ts --clear"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.1",
		"@sveltejs/kit": "^2.53.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/node": "^25.3.1",
		"drizzle-kit": "^0.31.9",
		"svelte": "^5.53.5",
		"svelte-check": "^4.4.3",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"@libsql/client": "^0.17.0",
		"@nomideusz/svelte-calendar": "^0.4.0",
		"dotenv": "^17.3.1",
		"drizzle-orm": "^0.45.1"
	}
}
